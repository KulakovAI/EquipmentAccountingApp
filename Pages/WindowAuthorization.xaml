<Window x:Class="EquipmentAccountingApp.Pages.WindowAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentAccountingApp.Pages"
        mc:Ignorable="d"
        Title="WindowAuthorization" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Авторизация" 
                       Margin="0 0 0 10"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Введите логин:"/>
            <TextBox Name="tbLogin"
                Margin="5"                     
                     Width="100"
                     Height="30"/>
            <TextBlock Text="Введите пароль:"/>
            <PasswordBox Name="pbPass"
                Margin="5"
                         Width="100"
                         Height="30"/>
            <Button Content="Войти"
                    Name="btnEnter"
                    Click="btnEnter_Click"/>
        </StackPanel>
    </Grid>
</Window>
